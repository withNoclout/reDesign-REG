{
    "extends": [
        "next/core-web-vitals",
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:react-hooks/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "rules": {
        // React rules
        "react/react-in-jsx-scope": "off",
        "react/prop-types": "warn",
        "react/jsx-uses-react": "off",
        // React Hooks rules - CRITICAL for preventing state errors
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn",
        // Catch undefined variables - THIS WOULD HAVE CAUGHT studentInfo ERROR
        "no-undef": "error",
        "no-unused-vars": [
            "warn",
            {
                "argsIgnorePattern": "^_",
                "varsIgnorePattern": "^_"
            }
        ],
        // Prevent common mistakes
        "no-console": [
            "warn",
            {
                "allow": [
                    "warn",
                    "error"
                ]
            }
        ],
        "no-debugger": "error",
        "no-alert": "warn",
        // Code quality
        "prefer-const": "warn",
        "no-var": "error",
        "eqeqeq": [
            "error",
            "always"
        ],
        "curly": [
            "error",
            "all"
        ],
        // Best practices
        "no-eval": "error",
        "no-implied-eval": "error",
        "no-new-func": "error",
        "no-return-await": "warn",
        "require-await": "warn"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}